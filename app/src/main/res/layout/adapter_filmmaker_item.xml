<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_movie"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_iv_img"
        android:layout_width="@dimen/adapter_item_img_width"
        android:layout_height="@dimen/adapter_item_img_height"
        android:scaleType="fitXY"
        android:src="@drawable/default_img"/>

    <TextView
        android:id="@+id/item_tv_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/adapter_item_text_height"
        android:gravity="center"
        android:textColor="@color/font_link"
        android:textSize="@dimen/font_size_normal"
        style="@style/text_single_line_style"/>
</LinearLayout>