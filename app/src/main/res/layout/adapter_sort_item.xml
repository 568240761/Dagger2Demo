<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_view_background"
    app:cardCornerRadius="@dimen/adapter_item_cornerRadius"
    app:cardElevation="@dimen/adapter_item_elevation">

    <LinearLayout
        android:id="@+id/ll_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_sort_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/adapter_item_img_min_height"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_sort_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/adapter_item_text_min_height"
            android:gravity="center_horizontal"
            android:textColor="@color/font_link"
            android:textSize="@dimen/font_size_large"/>
    </LinearLayout>
</android.support.v7.widget.CardView>