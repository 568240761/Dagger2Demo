<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_view_background"
    app:cardElevation="@dimen/adapter_item_elevation"
    app:cardCornerRadius="@dimen/adapter_item_cornerRadius">

    <LinearLayout
        android:id="@+id/ll_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_movie_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/adapter_item_img_height"
            android:src="@drawable/img_default"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/adapter_item_text_height"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_right_left"
            android:paddingRight="@dimen/margin_right_left">

            <TextView
                android:id="@+id/tv_movie_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="岁月无声"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_size_normal"/>

            <TextView
                android:id="@+id/tv_movie_average"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical|right"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="9.0"
                android:textColor="@color/average"
                android:textSize="@dimen/font_size_small"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>