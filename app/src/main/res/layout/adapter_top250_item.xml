<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_view_background"
    app:cardCornerRadius="@dimen/adapter_item_cornerRadius"
    app:cardElevation="@dimen/adapter_item_elevation">

    <LinearLayout
        android:id="@+id/top_ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/adapter_item_text_height"
            android:paddingLeft="@dimen/margin_right_left"
            android:paddingRight="@dimen/margin_right_left">

            <TextView
                android:id="@+id/top_tv_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="No 1"
                android:textColor="@color/average"
                android:textSize="@dimen/font_size_larger"
                android:textStyle="italic|bold"/>

            <TextView
                android:id="@+id/top_tv_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="9.6"
                android:textColor="@color/average"
                android:textSize="@dimen/font_size_larger"
                android:textStyle="italic"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/adapter_item_img_min_height"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_top_bottom"
            android:paddingLeft="@dimen/margin_right_left"
            android:paddingRight="@dimen/margin_right_left">

            <ImageView
                android:id="@+id/top_iv_img"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@drawable/img_default"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_right_left">

                <TextView
                    android:id="@+id/top_tv_name"
                    style="@style/adapter_item_text_style"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_size_larger"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/top_tv_type"
                    style="@style/adapter_item_text_style"/>

                <TextView
                    android:id="@+id/top_tv_director"
                    style="@style/adapter_item_text_style"/>


                <TextView
                    android:id="@+id/top_tv_cast"
                    style="@style/adapter_item_text_style"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>